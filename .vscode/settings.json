{
  // Suppress benign Tailwind at-rule warnings in editors
  "css.lint.unknownAtRules": "ignore",

  // Ensure Tailwind CSS IntelliSense scans app and src folders
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.files": {
    "include": [
      "src/**/*.{ts,tsx,js,jsx,css}",
      "src/app/**/*.{ts,tsx,js,jsx,css}",
      "src/components/**/*.{ts,tsx}",
      "src/styles/**/*.{css}"
    ]
  }
}
